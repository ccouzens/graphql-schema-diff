{
  "name": "graphql-schema-diff",
  "version": "2.0.0",
  "description": "Returns the diff of two GraphQL schemas. Detects dangerous and breaking changes.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node --files src/cli",
    "prepack": "npm run build",
    "test": "jest",
    "fmt": "prettier --write src/**"
  },
  "bin": "dist/cli.js",
  "files": [
    "dist/",
    "npm-shrinkwrap.json"
  ],
  "keywords": [
    "graphql",
    "schema",
    "diff"
  ],
  "author": "Fabian Schneider",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fabsrc/graphql-schema-diff/issues"
  },
  "homepage": "https://github.com/fabsrc/graphql-schema-diff#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabsrc/graphql-schema-diff"
  },
  "dependencies": {
    "@graphql-toolkit/core": "^0.10.5",
    "@graphql-toolkit/graphql-file-loader": "^0.10.5",
    "@graphql-toolkit/json-file-loader": "^0.10.5",
    "@graphql-toolkit/url-loader": "^0.10.5",
    "chalk": "^4.0.0",
    "diff2html": "^3.1.6",
    "disparity": "^3.0.0",
    "fs-extra": "^9.0.0",
    "graphql": "^15.0.0",
    "meow": "^6.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.1.0",
    "@types/hogan.js": "^3.0.0",
    "@types/jest": "^25.2.1",
    "@types/meow": "^5.0.0",
    "@types/node": "^13.13.4",
    "jest": "^25.4.0",
    "nock": "^12.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">= 10"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
