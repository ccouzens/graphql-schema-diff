{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/__tests__"]
}
